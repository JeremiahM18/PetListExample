<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/petcare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/petcare"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/petType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/petType"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/petcare"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="12dp"/>

    <Spinner
        android:id="@+id/petSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/pTypes"
        android:spinnerMode="dropdown"
        android:dropDownHeight="249dp"
        app:layout_constraintBaseline_toBaselineOf="@id/petType"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/petSpinner"
        app:layout_constraintBottom_toBottomOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>